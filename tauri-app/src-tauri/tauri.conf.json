{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "NSE Options Analyzer",
  "version": "2.0.0",
  "identifier": "com.nse.options.analyzer",
  "build": {
    "beforeBuildCommand": "cd ../frontend && npm run build-static",
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../frontend/out"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "windows": [
      {
        "title": "NSE Options Analyzer",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Finance",
    "shortDescription": "Advanced F&O analysis platform for NSE securities",
    "longDescription": "NSE Options Analyzer is a comprehensive tool for analyzing NSE F&O securities with real-time options chain data, intelligent alerts, and market insights.",
    "license": "MIT",
    "copyright": "Copyright Â© 2024 NSE Options Analyzer",
    "resources": [
      "resource/nse-analyzer"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "localhost",
      "signingIdentity": null,
      "hardenedRuntime": true,
      "entitlements": null,
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}